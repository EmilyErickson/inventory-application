extends layout

block content

  h1 Category: #{category.category_name}

  p #[strong Description:] #{category.category_description}
  
  div(style='margin-left:20px;margin-top:20px')

    h4 Items in #{category.category_name}
    if category_items.length
      dl
        each item in category_items
          dt
            a(href=item.url) #{item.item_name}
          dd #{item.item_description}
    else
      p This category has no items.

    hr
    p
      a(href=category.url+'/delete') Delete category
    p
      a(href=category.url+'/update') Update category
