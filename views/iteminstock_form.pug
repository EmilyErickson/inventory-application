extends layout

block content
  h1=title
  //- p= selected_item
  //- p= iteminstock

  form(method='POST')
    div.form-group
      label(for='item') Item:
      select#item.form-control(name='item' required)
        option(value='') --Please select an item--
        for item in item_list
          if selected_item && selected_item.item._id.toString()==item._id.toString()
            option(value=item._id, selected) #{item.item_name}
          else
            option(value=item._id) #{item.item_name}

    div.form-group
      label(for='item_count') Number of item in stock
      input#item_count.form-control(type='number' placeholder='5' name='item_count' required value=(undefined === selected_item ? '' : selected_item.item_count) )

    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
