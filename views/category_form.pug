extends layout

block content
  h1=title

  form(method='POST')
    div.form-group
      label(for='category_name') Category Name:
      input#category_name.form-control(type='text', placeholder='Category name' name='category_name' required value=(undefined===category ? '' : category.category_name) )
    div.form-group
      label(for='category_description') Category Description:
      textarea#category_description.form-control(type='text', placeholder='Category description' name='category_description' required value=(undefined===category ? '' : category.category_description))
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg
